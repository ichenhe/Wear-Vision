<resources>

    <!-- Standard margin -->
    <dimen name="wv_margin_extra_small">4dp</dimen>
    <dimen name="wv_margin_small">8dp</dimen>
    <dimen name="wv_margin_medium">12dp</dimen>
    <dimen name="wv_margin_large">16dp</dimen>
    <dimen name="wv_margin_extra_large">24dp</dimen>

    <!-- Standard padding -->
    <dimen name="wv_page_horizontal_padding_large">24dp</dimen>
    <dimen name="wv_page_horizontal_padding_normal">22dp</dimen>
    <dimen name="wv_page_horizontal_padding_small">14dp</dimen>

    <!-- Round device default page padding will be larger to reduce content clipping -->
    <dimen name="wv_page_vertical_padding">24dp</dimen>
    <dimen name="wv_page_horizontal_padding">24dp</dimen>

    <!-- Standard item preferred height -->
    <dimen name="wv_item_preferred_height">64dp</dimen>
    <dimen name="wv_item_preferred_height_small">48dp</dimen>
    <dimen name="wv_item_preferred_height_large">80dp</dimen>

    <dimen name="wv_list_padding_bottom">@dimen/wv_page_vertical_padding</dimen>

    <!-- Default padding for list items. -->
    <dimen name="wv_list_item_padding_horizontal_start">@dimen/wv_page_horizontal_padding_normal
    </dimen>
    <dimen name="wv_list_item_padding_horizontal_end">@dimen/wv_page_horizontal_padding_small
    </dimen>
    <dimen name="wv_list_item_padding_vertical">6dp</dimen>

    <!-- Default padding for centered list items. -->
    <dimen name="wv_list_item_padding_horizontal">@dimen/wv_page_horizontal_padding_small</dimen>


    <!-- Dimens for list item content. -->
    <dimen name="wv_list_item_icon_size_large">48dp</dimen>
    <dimen name="wv_list_item_icon_size_normal">44dp</dimen>
    <dimen name="wv_list_item_icon_size_small">40dp</dimen>
    <dimen name="wv_list_item_icon_src_padding">8dp</dimen>

</resources>