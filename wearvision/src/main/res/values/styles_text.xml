<resources>

    <style name="TextAppearance" />

    <style name="TextAppearance.WearVision">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">@dimen/wv_text_size_body_1</item>
        <item name="android:lineSpacingMultiplier">?android:lineSpacingMultiplier</item>
        <item name="android:lineSpacingExtra">?android:lineSpacingExtra</item>
        <item name="android:fontFamily">@string/wv_font_family_body_1</item>
    </style>

    <style name="TextAppearance.WearVision.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.WearVision.Headline">
        <item name="android:textSize">@dimen/wv_text_size_headline</item>
        <item name="android:fontFamily">@string/wv_font_family_headline</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.WearVision.Title">
        <item name="android:textSize">@dimen/wv_text_size_title</item>
        <item name="android:fontFamily">@string/wv_font_family_title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.WearVision.Title.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.WearVision.Subhead">
        <item name="android:textSize">@dimen/wv_text_size_subhead</item>
        <item name="android:fontFamily">@string/wv_font_family_subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.WearVision.Subhead.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.WearVision.Body1">
        <item name="android:textSize">@dimen/wv_text_size_body_1</item>
        <item name="android:fontFamily">@string/wv_font_family_body_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.WearVision.Body1.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.WearVision.Body2">
        <item name="android:textSize">@dimen/wv_text_size_body_2</item>
        <item name="android:fontFamily">@string/wv_font_family_body_2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.WearVision.Caption">
        <item name="android:textSize">@dimen/wv_text_size_caption</item>
        <item name="android:fontFamily">@string/wv_font_family_caption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.WearVision.Caption.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.WearVision.Button">
        <item name="android:textSize">@dimen/wv_text_size_button</item>
        <item name="android:fontFamily">@string/wv_font_family_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="TextAppearance.WearVision.WindowTitle" parent="TextAppearance.WearVision.Body2">
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <style name="TextAppearance.WearVision.WindowTitle.Small">
        <item name="android:textSize">@dimen/wv_text_size_small_2</item>
    </style>

    <style name="TextAppearance.WearVision.WindowTitle.Large">
        <item name="android:textSize">@dimen/wv_text_size_large_1</item>
    </style>

    <style name="TextAppearance.WearVision.DialogWindowTitle" parent="TextAppearance.WearVision.Body2" />

    <style name="TextAppearance.WearVision.DialogContent" parent="TextAppearance.WearVision.Body2">
        <item name="android:textSize">@dimen/wv_text_size_medium_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>